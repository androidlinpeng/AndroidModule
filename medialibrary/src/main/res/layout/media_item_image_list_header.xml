<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/media_bg_list_item_white">

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/media_ic_image_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="12dp"
                android:text="所有图片"
                android:textColor="@color/media_color_title_select"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/image_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:text="100张"
                android:textColor="@color/media_color_content"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_selec"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/media_ic_image_selec"
            android:tint="@color/media_green"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/media_grayDark" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/media_bg_list_item_white">

        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/video_icon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/media_ic_image_bg"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/media_ic_play_bg"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/file_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="12dp"
                android:text="所有视频"
                android:textColor="@color/media_color_title_select"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/video_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:text="25张"
                android:textColor="@color/media_color_content"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/video_selec"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/media_ic_image_selec"
            android:tint="@color/media_green"
            android:visibility="gone" />

        <View
            android:id="@+id/view_temp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/media_grayDark" />

    </RelativeLayout>

</LinearLayout>