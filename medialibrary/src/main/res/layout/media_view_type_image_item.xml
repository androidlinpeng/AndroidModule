<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/media_bg_list_item_white">

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/media_ic_image_bg"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="12dp"
                android:text="名称"
                android:textColor="@color/media_color_title_select"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/image_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:text="名称"
                android:textColor="@color/media_color_content"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/selec"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/media_ic_image_selec"
            android:tint="@color/media_green"
            android:visibility="gone"/>

        <View
            android:id="@+id/view_temp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/media_grayDark" />

    </RelativeLayout>

</LinearLayout>